{
  "buildCommand": "echo 'No build step needed for static HTML site'",
  "outputDirectory": ".",
  "devCommand": "python -m http.server 3000",
  "installCommand": "echo 'No dependencies to install'",
  "framework": null,
  "cleanUrls": true,
  "trailingSlash": false,
  "rewrites": [
    { "source": "/home", "destination": "/index.html" },
    { "source": "/homepage", "destination": "/index.html" },
    { "source": "/services", "destination": "/service.html" },
    { "source": "/about", "destination": "/about.html" }
  ],
  "headers": [
    {
      "source": "/video/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000"
        }
      ]
    },
    {
      "source": "/img/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000"
        }
      ]
    },
    {
      "source": "/css/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000"
        }
      ]
    }
  ]
}